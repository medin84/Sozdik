<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:scrollViewStyle">@style/scrollViewStyle</item>
        <!-- <item name="android:horizontalScrollViewStyle">@style/horizontalScrollViewKK</item> -->
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dip</item>
        <item name="android:maxWidth">75dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:textColor">#444</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="buttonKK" parent="@style/button">
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:maxWidth">45dp</item>
    </style>

    <style name="llTranslateSrc" parent="AppBaseTheme">
        <item name="android:background">#FFF</item>
        <!-- <item name="android:layout_margin">1dip</item> -->
    </style>

    <style name="llKKSymbols" parent="AppBaseTheme">
        <item name="android:background">#FFF</item>
        <!-- <item name="android:layout_margin">1dip</item> -->
    </style>

    <style name="scrollViewStyle" parent="@android:style/Widget.ScrollView">
        <item name="android:background">#FFF</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- <style name="horizontalScrollViewKK" parent="@android:style/Widget.HorizontalScrollView">
        <item name="android:background">#FFF</item>
        <item name="android:buttonStyle">@style/buttonKK</item>
    </style> -->

</resources>